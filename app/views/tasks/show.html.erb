<h1><%= @task.title %></h1>

<h5><%= @task.details %></h5>

<span>
<% if @task.completed %>
  <i class="far fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>
This task is <% if @task.completed %>
  completed
  <% else %>
  not completed yet
  <% end %>
</span>

<p><%= link_to 'Back to tasks list', tasks_path %></p>

<p><%= link_to 'Edit task', edit_task_path %></p>

<p><%= link_to 'Delete task', task_path, method: :delete, data: { confirm: "Are you sure?" } %></p>
